generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model FitnessGoal {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] @relation("UserGoals")
}

model User {
  id                      Int                     @id @default(autoincrement())
  firebaseUid             String                  @unique
  email                   String
  username                String?                 @unique
  createdAt               DateTime                @default(now())
  firstName               String?
  lastName                String?
  age                     Int?
  gender                  Gender?
  occupation              String?
  inspiration             String?
  phone                   String?
  weeklyWorkoutHours      Float?
  sessionPreference       SessionPreference?
  dietaryRestrictions     String?
  heightCm                Float?
  weightKg                Float?
  lastLogin               DateTime?
  streakCount             Int                     @default(0)
  hasCompletedOnboarding  Boolean                 @default(false)
  completedMealEntries    CompletedMealEntry[]
  completedWorkoutEntries CompletedWorkoutEntry[]
  meals                   Meal[]
  Notification            Notification[]
  ProgressSnapshot        ProgressSnapshot[]
  UserPlan                UserPlan[]
  workouts                Workout[]
  goals                   FitnessGoal[]           @relation("UserGoals")
}

model Meal {
  id       Int      @id @default(autoincrement())
  userId   Int
  foodName String
  calories Float
  protein  Float
  carbs    Float
  fat      Float
  quantity Float
  mealType String
  date     DateTime @default(now())
  sodium   Float
  sugar    Float
  user     User     @relation(fields: [userId], references: [id])

  @@index([userId, date])
}

model Workout {
  id              Int      @id @default(autoincrement())
  userId          Int
  workoutType     String
  durationMinutes Float
  caloriesBurned  Float
  date            DateTime @default(now())
  name            String
  notes           String
  reps            Int
  sets            Int
  weight          Float
  user            User     @relation(fields: [userId], references: [id])

  @@index([userId, date])
}

model CompletedMealEntry {
  id            Int      @id @default(autoincrement())
  userId        Int
  date          DateTime
  summary       String
  totalCalories Float    @default(0)
  totalCarbs    Float    @default(0)
  totalFat      Float    @default(0)
  totalProtein  Float    @default(0)
  totalSodium   Float    @default(0)
  totalSugar    Float    @default(0)
  waterIntake   Float    @default(0)
  isCompleted   Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@index([userId, date])
}

model CompletedWorkoutEntry {
  id                  Int      @id @default(autoincrement())
  userId              Int
  date                DateTime
  summary             String
  totalCaloriesBurned Float    @default(0)
  totalDuration       Float    @default(0)
  totalExercises      Int      @default(0)
  isCompleted         Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  user                User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@index([userId, date])
}

model Notification {
  id        Int              @id @default(autoincrement())
  userId    Int
  type      NotificationType
  title     String
  message   String
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  User      User             @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([userId, isRead])
}

model ProgressSnapshot {
  id                Int      @id @default(autoincrement())
  userId            Int
  date              DateTime
  plannedCalories   Float?
  actualCalories    Float?
  plannedWorkouts   Int?
  actualWorkouts    Int?
  calorieDeviation  Float?
  workoutCompliance Float?
  createdAt         DateTime @default(now())
  User              User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@index([userId, date])
}

model UserPlan {
  id        Int        @id @default(autoincrement())
  userId    Int
  weekStart DateTime
  planJson  Json
  status    PlanStatus @default(GENERATING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  User      User       @relation(fields: [userId], references: [id])

  @@index([userId, status])
  @@index([userId, weekStart])
}

enum Goals {
  LOSE_WEIGHT
  GAIN_WEIGHT
  BUILD_MUSCLE
  TONE_AND_STRENGTHEN
  MAINTAIN_WEIGHT
  EAT_HEALTHY
  HEALTH_AND_LONGEVITY
  MANAGE_STRESS_AND_RECOVERY
}

enum Gender {
  MALE
  FEMALE
  OTHER
  RATHER_NOT_SAY
}

enum SessionPreference {
  LONGER_FEWER
  SHORTER_MORE
}

enum NotificationType {
  PROGRESS_ALERT
  MILESTONE
  PLAN_READY
  PLAN_FAILED
  WEEKLY_SUMMARY
}

enum PlanStatus {
  GENERATING
  ACTIVE
  COMPLETED
  FAILED
}
